    }
  .curated_category_sec .slider--desktop:after{
      padding-left: 0;
  }
}
   
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{%- liquid

    assign columns_desktop_int = section.settings.columns_desktop | plus: 0
    
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif

   assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and section.blocks.size > columns_desktop_int
    assign show_desktop_slider = true
  endif
-%}

<section class="{{ section.settings.custom_class }} section_margin section-{{ section.id }}-padding">
    <!-- Left flower image with srcset -->
    <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/left_side-flower-small.png?v=1707127526" 
         srcset="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/left_side-flower-small.png?v=1707127526&width=150 150w,
                 https://cdn.shopify.com/s/files/1/0689/3014/2515/files/left_side-flower-small.png?v=1707127526&width=300 300w" 
         sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, 300px"
         alt="Valentine Flower" 
         class="left_flower valentine" 
         width="300" 
         height="300">
    
    <!-- Right flower image with srcset -->
    <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/right_side_flower-small.png?v=1707127532" 
         srcset="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/right_side_flower-small.png?v=1707127532&width=150 150w,
                 https://cdn.shopify.com/s/files/1/0689/3014/2515/files/right_side_flower-small.png?v=1707127532&width=300 300w" 
         sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, 300px"
         alt="Valentine Flower" 
         class="right_flower valentine" 
         width="300" 
         height="300">
  
 
         <div class="populer_inner_sec">
           <slider-component class="slider-mobile-gutter {% if show_desktop_slider %} slider-component-desktop{% endif %}">
           <div class="title_arrow_sec page-width">
         <h3 class="section_heading font_heading">
         {{ section.settings.category_title }}
         </h3>
    <div class="valentine_heading_line valentine">
      <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/line_design_1.png?v=1707124749"
           srcset="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/line_design_1.png?v=1707124749&width=320 320w,
             https://cdn.shopify.com/s/files/1/0689/3014/2515/files/line_design_1.png?v=1707124749&width=480 480w,
             https://cdn.shopify.com/s/files/1/0689/3014/2515/files/line_design_1.png?v=1707124749&width=640 640w,
             https://cdn.shopify.com/s/files/1/0689/3014/2515/files/line_design_1.png?v=1707124749&width=846 846w"
           sizes="(max-width: 480px) 100vw, (max-width: 768px) 90vw, 846px"
           alt="Decorative Line Design"
           width="846"
           height="40"
    </div>
  </div>
             <div id="Slider-{{ section.id }}" class="populer_slider page-width grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down {% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}">
              {%- for block in section.blocks -%}
               <div id="Slide-{{ section.id }}-{{ forloop.index }}" class="populer_sec {{ block.settings.city_hide }} collection-list__item grid__item {% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}" onclick="window.location.href='{{ block.settings.card_url }}';">
                  <div class="image_text_sec">
                     <div class="image_sec">
                        <img
                         srcset="{{ block.settings.coll_img | img_url: '300x' }} 300w,
                           {{ block.settings.coll_img | img_url: '400x' }} 400w,
                           {{ block.settings.coll_img | img_url: '500x' }} 500w"
                         src="{{ block.settings.coll_img | img_url: '300x' }}"
                         sizes="(max-width: 768px) 141px, 231px"
                         alt="{{ block.settings.coll_title | escape }}"
                         width="{{ block.settings.coll_img.width }}"
                         height="{{ block.settings.coll_img.height }}"
                         decoding="async"
                         >
                        </div>
                        <div class="text_area">
                           <p class="color_white text_sm">{{ block.settings.coll_title }}</p>
                        </div>
                  </div>
                  
               </div>
               {% endfor %}

              
            </div>
             {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons no-js-hidden small-hide">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">
            <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/left-arrow.svg" alt="left_arrow">
      </button>
<!--           <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div> -->
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">
            <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/right-arrow.svg" alt="right_arrow">
          </button>
          
        </div>
             {% comment %}
      <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button class="slider-counter__link {{ block.settings.custom_class }} slide-{{ forloop.index }} slider-counter__link--dots  link" aria-label="{{ 'general.slider.next_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}" aria-controls="Slider-{{ section.id }}">
                <span class="dot"></span>
              </button>
            {%- endfor -%}
          </div>
      {% endcomment %}
      {%- endif -%}
             </slider-component>
         </div>
      </section>


{% schema %}
  {
    "name": "Category Section",
    "settings": [
      {
        "type": "text",
        "id": "custom_class",
        "label": "Add Custom Class"
      },
      {
        "type": "text",
        "id": "category_title",
        "label": "Add Title"
      },
      {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    },
       {
      "type": "checkbox",
      "id": "enable_desktop_slider",
      "label": "Enable Desktop Slider",
      "default": false
    },
       {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.collection-list.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.collection-list.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "1",
      "label": "t:sections.collection-list.settings.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.collection-list.settings.swipe_on_mobile.label"
    },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
    ],
          "blocks": [
        {
          "type": "collection",
          "name": "Collection Block",
          "settings":
          [
            {
              "type": "text",
              "id": "city_hide",
              "label": "Add City Hide Class"
            },
            {
              "type": "image_picker",
              "id": "coll_img",
              "label": "Add Collection Image"
            },
            {
              "type": "text",
              "id": "coll_title",
              "label": "Add Collection Title"
            },
            {
              "type": "url",
              "id": "card_url",
              "label": "Add Url"
            }
          ]
        }
    ],
        "presets": [
      {
        "name": "Category Section"
      }
  ]
  }
{% endschema %}


