  @media (min-width: 768px) and (max-width: 1023px) {
      .populer_inner_sec .populer_slider .populer_sec{
        width: calc(30% - var(--grid-desktop-horizontal-spacing) - 3rem) !important;
}
     .populer_inner_sec .populer_slider .populer_sec .text_area p{
      margin-bottom: 12px;
    }
  }


.category_list .slider-mobile-gutter {
      padding: 0 5rem;
  max-width: var(--page-width);
    margin: 0 auto;
