<style>
    .desktop_banner{
      display:block;
    }
    .mobile_banner{
      display:none;
    }
  .multicolumn_description{
    margin: 0;
    font-weight: 400;
    text-align: center;
  }
  .multicolumn .title-wrapper-with-link {
    justify-content: center;
    margin: 5rem 0 7rem;
}
  .treasured_section .title-wrapper-with-link {
    margin: 2rem 0 4rem !important;
}
  .treasured_section .multicolumn-card__image-wrapper {
    margin-left: 0rem !important;
    margin-right: 0rem !important;
    cursor:pointer;
}
  .treasured_section .btn_txt{
    display:none;
  }
  .treasured_section .multicolumn-card__info{
    padding-left: 0 !important;
    display: flex;
    align-items: flex-start;
    padding-top: 10px !important;
    justify-content: space-between;
  }
  .treasured_section .multicolumn-card__info .link{
    margin-top: 0;
  }
  .treasured_section .multicolumn-card__info p{
    text-align: left;
    line-height: 1.2;
    letter-spacing: 0;
    font-size:18px;
  }
  .treasured_section{
    background: linear-gradient(180deg, rgba(255,240,217,0.5047268907563025) 50%, rgba(255,219,166,0.5) 100%);
  }
  .treasured_section .multicolumn-list__item.center .media--adapt img{
    border-radius:10px;
  }

  @media(max-width:991px){
     .treasured_section .title-wrapper-with-link{
      align-items:center;
      margin: 0rem 0 2rem !important;
      gap:0rem;
    }

   .treasured_section .grid--1-col-tablet-down .grid__item {
      width: calc(18% - var(--grid-desktop-horizontal-spacing) * 3 / 4);
      max-width: calc(50% - var(--grid-desktop-horizontal-spacing) / 2);
   }
    .treasured_section .multicolumn-card__info {
    padding-left: 0rem !important;
    }
}
  
  @media(max-width:767px){
     .mobile_banner{
      display:block;
        height:100% !important;
    }
      .desktop_banner{
      display:none;
    }
   .treasured_section .multicolumn-list{
     display:grid;
      grid-template-columns: repeat(2,48%);
    }
    .treasured_section .multicolumn-card__info p{
      line-height:1.5;
    }
    .treasured_section .multicolumn-list__item .media--adapt .multicolumn-card__image{
      width:100%;
      height:auto;
    }
     .treasured_section .multicolumn-list__item:nth-child(3){
      grid-column:1/3;
    }
    .treasured_section .multicolumn-list__item:nth-child(3).center .media--adapt{
      padding-bottom: 53.589041% !important;
    }
    .treasured_section .multicolumn-list__item.center .media--adapt img{
    border-radius:10px;
  }
    .treasured_section .grid--1-col-tablet-down .grid__item {
      width: 100%;
      max-width: 100%;
    }
  }

.wedding_corporate .mobile_banner{
  display:none;
}
.curated_gift_section .title-wrapper-with-link .cmn_btn{
  color:#fff;
  margin: 0;
}
  .curated_gift_section .title-wrapper-with-link{
        justify-content: space-between !important;
    align-items: center;
    margin-bottom: 20px !important;
  }

  .curated_gift_section .title-wrapper-with-link h2{
    margin:0;
  }
   .curated_gift_section .multicolumn-card__image-wrapper{
        margin-left: 0 !important;
        margin-right: 0 !important;
   }
  
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="multicolumn {{ section.settings.custom_class }} color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
   
  
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div asd class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin" {% if section.settings.subtitle != blank %}style="flex-direction:column";{% endif %}>
        <h2 class="title center font_xxl {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">
            {{- section.settings.button_label | escape -}}
          </a>
        {%- endif -%}
      <p class="multicolumn_description color_black font_lg">{{ section.settings.subtitle }}</p>
      
      <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a
          class="cmn_btn button button--primary"
          {% if section.settings.button_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_link }}"
          {% endif %}
        >
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.image == blank
            and block.settings.title == blank
            and block.settings.text == blank
            and block.settings.link_label == blank
          -%}
            {%- assign empty_column = ' multicolumn-list__item--empty' -%}
          {%- endif -%}

          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}"
            {{ block.shopify_attributes }}
          >
            <div id="multicard-{{ forloop.index }}" class="multicolumn-card content-container">
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                
                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}" {% unless page.handle == 'digital-wall' %}onclick="window.location.href='{{ block.settings.link }}';" style="cursor: pointer;"{% endunless %}>
                  <div
                    class="media desktop_banner media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}
                  >
                    {%- capture sizes -%}
                      (min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width:
                      750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px)
                    {%- endcapture -%}
                    {{
                      block.settings.image
                      | image_url: width: 1420
                      | image_tag:
                        loading: 'lazy',
                        sizes: sizes,
                        widths: '275, 550, 710, 1420',
                        class: 'multicolumn-card__image'
                    }}
                  </div>
                  <div
                    class="media mobile_banner media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}
                  >
                    {%- capture sizes -%}
                      (min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width:
                      750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px)
                    {%- endcapture -%}
                  {% comment %}
                    {{
                      block.settings.mob_banner
                      | image_url: width: 1420
                      | image_tag:
                        loading: 'lazy',
                        sizes: sizes,
                        widths: '275, 550, 710, 1420',
                        class: 'multicolumn-card__image'
                    }}
                {% endcomment %}
                <img 
                  src="{{ block.settings.mob_banner | img_url: '200x200', crop: 'center' }}" 
                 srcset="{{ block.settings.mob_banner | img_url: '200x200', crop: 'center' }} 1x, 
                   {{ block.settings.mob_banner | img_url: '400x400', crop: 'center' }} 2x"
                  loading="lazy"
                  width="178" 
                 height="178" 
                  alt="{{ block.settings.mob_banner.alt | default: 'Mobile banner' }}" 
                 class="img-responsive">
                  </div>
                </div>
              {%- endif -%}
              <div class="multicolumn-card__info">
                {%- if block.settings.title != blank -%}
                  <h3 class="font_heading">{{ block.settings.title | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="rte desc font_text color_black font_weight_400">
                    {% if page.handle == "digital-wall" %}
                    <img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/Union_2.png?v=1698930598" class="img-reponsive quotes_img">
                      {% endif %}
                  {{ block.settings.text }}
                  </div>
                  
                {%- endif -%}
         
            {%- if block.settings.city_text != blank -%}
                  <div class="rte city_txt font_text color_black font_weight_400">{{ block.settings.city_text }}</div>
                  
                {%- endif -%}
                {%- if block.settings.link_label != blank -%}
                  <a
                    class="link animate-arrow"
                    {% if block.settings.link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.link }}"
                    {% endif %}
                  >
                    <span class="btn_txt">{{- block.settings.link_label | escape -}}</span>
                    <span class="icon-wrap">{% render 'treasured_icon' %}</span></a
                  >
                {%- endif -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
    
  </div>
</div>

