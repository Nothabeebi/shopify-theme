<style>

  .explore_section .section_heading{
    font-size: 40px;
    margin:0;
  }
  .explore_section p {
  font-family: var(--font-light);
  margin: 0 0 20px 0;
  font-size:21px;}
.explore_section .view_more_sec {
  display: none; }
  @media (min-width: 0px) and (max-width: 767px) {
    .explore_section .view_more_sec {
      display: block; } }
.explore_section .category_card {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
column-gap: 20px;
    row-gap: 20px;}
  @media (min-width: 0px) and (max-width: 767px) {
    .explore_section .category_card {
      grid-template-columns: repeat(2, 1fr);
    column-gap: 6px;
    row-gap: 10px;
    margin-left: -7px;} }
 .explore_section .category_card .card_sec {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #E7E7E7; }
    @media (min-width: 0px) and (max-width: 767px) {
      .explore_section .category_card .card_sec {
        flex-direction: column-reverse;
         } }
   .explore_section .category_card .card_sec .card_info {
      padding-left: 15px; }
  .explore_section .category_card .card_sec .card_img{
        width: 50%;
    height: auto;
    line-height: 0;
  }
      @media (min-width: 0px) and (max-width: 767px) {
        .explore_section .category_card .card_sec .card_img{
          width:100%;
    height:auto;
          line-height: 0;
        }
        .explore_section .category_card .card_sec .card_info {
          display: flex;
          width: 100%;
          justify-content: space-between;
          align-items: center;
          padding-left: 0px;
          padding: 8px; } }
      @media (min-width: 0px) and (max-width: 767px) {
       .explore_section .category_card .card_sec .card_info h5 {
          font-size: 12px;
       line-height:1.2;
       margin:0;} }

  .explore_section .category_card .card_sec .card_info h5{
    margin-bottom: 7px;
    font-family: 'CeraProMedium';
  }
  .view_more_sec p{
    margin-top: 15px;
    text-transform: uppercase;
    text-decoration: underline;
    text-underline-offset: 4px;
    font-size: 16px;
  }
  @media(max-width:767px){
    .explore_section .section_heading{
      font-size: 20px;
    text-align: center;
      margin-bottom: 3px!important;
    }
    .explore_section p{
      text-align:center;
      line-height:1.2;
      font-size: 14px;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
   
    .explore_section .category_card{
      grid-template-columns: repeat(2, 1fr);
    }
}

</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="explore_section section_margin section-{{ section.id }}-padding">
         <div class="page-width">
            <h3 class="section_heading font_heading">{{ section.settings.explore_title }}</h3>
            <p>{{ section.settings.explore_desc }}</p>
            <div class="category_card">

              {%- for block in section.blocks -%}
               <div class="card_sec {% if forloop.index == 5 or forloop.index == 6 or forloop.index == 7 or forloop.index == 8 or forloop.index == 9 %}card_hide{% endif %}" onclick="window.location.href='{{ block.settings.card_url }}';" {% if block.settings.card_url %}style="cursor:pointer;" {% endif %}>
                  <div class="card_info">
                     <h5>{{ block.settings.card_title }}</h5>
                     <a href="{{ block.settings.card_url }}"><img src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/right-arrow.svg" alt="arrow_img"></a>
                  </div>
                 <div class="card_img">
                     <img src="{{ block.settings.card_img | img_url: 'master'}}" alt="card_img" loading="lazy" class="img-responsive">
                 </div>
               </div>
              
              {% endfor %} 
               
            </div>
            <div class="view_more_sec">
               <p>View More +</p>
            </div>
         </div>
         
      </section>


{% schema %}
  {
    "name": "Explore Section",
    "settings": [
      {
        "type": "text",
        "id": "explore_title",
        "label": "Add Title"
      },
      {
        "type": "text",
        "id": "explore_desc",
        "label": "Add Description"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
    ],
      "blocks": [
        {
          "type": "Text",
          "name": "Text Block",
          "settings":
          [
            {
              "type": "image_picker",
              "id": "card_img",
              "label": "Add Card Image"
            },
            {
              "type": "text",
              "id": "card_title",
              "label": "Add Card Image"
            },
            {
              "type": "url",
              "id": "card_url",
              "label": "Add Url"
            }
          ]
        }
    ],
    "presets": [
      {
        "name": "Explore Section"
      }
  ]
  }
{% endschema %}

